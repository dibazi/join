<!DOCTYPE html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!-- Fonts -->
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;700&display=swap">
        <script src="https://cdn.tailwindcss.com"></script>

        <!-- Styles -->

        <!-- Scripts -->
    </head>

  <html class="h-full bg-gray-100">
  <body class="h-full">

    <div class="min-h-full">
        <%- include('NavBar.ejs') %>
      
  
    <header class="bg-white shadow">
      <div class="mx-auto max-w-7xl px-4 py-6 sm:px-6 lg:px-8">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900">Project details</h1>
      </div>
    </header>
    <main>

        <div>
            <div class="max-w-4xl mx-auto py-10 sm:px-6 lg:px-8">
                <div class="mt-5 md:mt-0 md:col-span-2">
                    <form method="post" action="">
                        <div class="shadow overflow-hidden sm:rounded-md">

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="name" class="block font-medium text-sm text-gray-700">Project name</label>
                                <input type="text" name="name" id="name" value="<%= projects.name %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="name" class="block font-medium text-sm text-gray-700">Project author</label>
                                <input type="text" name="author" id="author" value="<%= projects.author %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>
    
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="surname" class="block font-medium text-sm text-gray-700">Project category</label>
                                <input type="text" name="category" id="category" value="<%= projects.category %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="address" class="block font-medium text-sm text-gray-700">Project description</label>
                                <input type="text" name="description" id="description" value="<%= projects.description %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                              <label for="address" class="block font-medium text-sm text-gray-700">Driver start_date</label>
                              <input type="text" name="start_date" id="start_date" value="<%= new Date(projects.start_date).toLocaleDateString() %>" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">
                          </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="cellphone" class="block font-medium text-sm text-gray-700">Project status</label>
                                <input type="text" id="status" name="status" value="<%= projects.status %>" class="block font-medium text-sm text-gray-700" autocomplete="off">
                            </div>

                        <!--  
                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="car_maker" class="block font-medium text-sm text-gray-700">Project files</label>
                                <a href="/<%= projects.file_paths.replace(/\[|\]|"/g, '') %>" class="text-blue-600 hover:text-blue-900 mb-2 mr-2">View files</a>
                            </div>

                            <div class="px-4 py-5 bg-white sm:p-6">
                                <label for="picture" class="block font-medium text-sm text-gray-700">Driver picture</label>
                                <input type="file" id="picture" value="" name="picture" class="border-b py-1 focus:outline-none focus:border-purple-600 focus:border-b-2 transition-colors peer w-full" autocomplete="off">                            
                            </div>
                        -->
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </main>
  </div>

      <!-- Tailwind CSS (place at the end of the body for faster loading) -->
      <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/postcss7-compat@2.2.19/dist/tailwind.min.js"></script>
      <!-- Your custom JavaScript for mobile menu interaction -->
      <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
    
        mobileMenuButton.addEventListener('click', () => {
          mobileMenu.classList.toggle('hidden');
        });
      </script>
  
    </body>
</html>